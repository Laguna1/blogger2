<h1>Articles Tagged with <%= @tag.name %></h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<br />
<br />
<br />
<br />

<p><%= link_to '<<Delete this tag', tag_path(@tag), method: :delete, data: {confirm: 'Really want to delete it?'} %></p>
<p><%= link_to '<<Back to Articles List', root_path %></p>
